---
import '../styles/global.css';
import { getTerminalPS } from '../utils/terminal';
import Header from '../components/Header.astro';

const title = getTerminalPS(Astro.url.pathname);
---

<!DOCTYPE html>
<html lang="es" class="bg-bg-black min-h-screen">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body class="max-w-[960px] mx-auto p-5 text-amber-bright min-h-screen relative z-10 md:p-5 max-md:p-2.5 max-md:border-none" style="opacity: 0; transition: opacity 50ms ease;">
    <Header />
    <slot />
    <script src="../scripts/crt-effects.ts"></script>
</body>
</html>
